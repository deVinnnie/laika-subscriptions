{{#partial "content" }}
    {{#if unsubscribed}}
        <div class="callout success">
            <p>Het e-mailadres werd verwijderd van de lijst.</p>
        </div>
    {{/if}}

    <h1>Uitschrijven</h1>
    <p>Wens je geen mails meer te ontvangen? Geef in onderstaand formulier je emailadres in en je wordt verwijderd van de mailinglijst.</p>

    <form class="pure-form pure-form-stacked" method="POST">
        <input name="_csrf" type="hidden" value="{{_csrf}}"/>

        <label class="required" for="email">E-mailadres</label>
        <input id="email" name="email" type="email" required/>

        <button class="pure-button pure-button-primary" type="submit">Uitschrijven</button>
    </form>
{{/partial}}

{{> layouts/base title="Uitschrijven"}}
